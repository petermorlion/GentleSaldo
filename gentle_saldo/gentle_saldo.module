 */
function gentle_saldo_overview_form_submit($form, &$form_state) {
    // TODO: remove
    ini_set('SMTP', 'aspmx.l.google.com'); 
    ini_set('smtp_port', 25);
    
    // TODO: simplify code for getting max(id), also in user page code
    $row = "";	
    $query = "select max(id) as id from gentle_saldo_update";
    $rs = db_query($query);

    # iterate over resultset, will be only once as we call the "max()" function
    foreach ($rs as $rs_item) {
	    $row = $rs_item;
    }

    $query = "select * from gentle_saldo_update where id = '".$row->id."'";
    $rs = db_query($query);

    # iterate over saldo_updates item, will be only once as the updateid is a unique primary key
    foreach ($rs as $rs_item) {
	    $row = $rs_item;
    }

    $update_id = $row->id;

    // TODO: this means only one query, but we're re-using the function for the HTML which does a query per user
    $rs = db_query("SELECT g.uid, u.name, u.mail, g.amount, g.date
                    FROM {gentle_saldo_transaction} g
                        INNER JOIN {users} u ON u.uid = g.uid
                    WHERE g.gentle_saldo_update_id = :update_id 
                    ORDER BY g.uid, g.date", array(
            ':update_id' => $update_id,
        ));

    $number = 0;
    $errorNumber = 0;
    $rows = array();
    $firstRecord = TRUE; // TODO: must be a better way, $currentuid = $rs[0]->uid doesn't work
    $currentuid = NULL;
    foreach($rs as $row) {
        if ($firstRecord) {
            $currentuid = $row->uid;
            $firstRecord = FALSE;
        }

        if ($row->uid === $currentuid) {
            $rows[] = $row;
        } else {
            $params['rows'] = $rows;
            $params['uid'] = $currentuid;
            $message = drupal_mail('gentle_saldo', 'update', $row->mail, NULL, $params, variable_get('gentle_saldo_email'), TRUE);
            // TODO: counter of successful/unsuccessful emails
            $number++;

            $currentuid = $row->uid;
            $rows = array();
            $rows[] = $row;
        }
    }

    // TODO: must be a better solution for this
    // Send last mail
    if (count($rows) > 0) {
        $params['rows'] = $rows;
        $params['uid'] = $currentuid;
        $message = drupal_mail('gentle_saldo', 'update', $row->mail, 'nl', $params, variable_get('gentle_saldo_email'), TRUE);
